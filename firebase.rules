rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /project-files/{fileName} {
      // Allow read/write access to project-files folder
      allow read, write: if true;
      // Optional: Add size and type restrictions
      allow create: if request.resource.size < 10 * 1024 * 1024  // 10MB
                   && request.resource.contentType.matches('image/.*|application/pdf|application/msword');
    }
  }
} 